- Category.all.order("id ASC").limit(13).each do |parent|
  %li#nav-drawer__ctd2
    =link_to "#{parent.name}",category_path(parent.id)
    %ul#nav-drawer__2
      -parent.children.limit(14).each do |chaild|
        %li#nav-drawer__ctd3
          =link_to "#{chaild.name}",category_path(chaild.id)
          %ul#nav-drawer__3
            -chaild.children.limit(14).each do |grandchaild|
              %li#nav-drawer__ctd4
                =link_to "#{ grandchaild.name}",category_path(grandchaild.id)
%li.all
  =link_to "カテゴリー一覧",categories_path
  

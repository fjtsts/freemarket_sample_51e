.pickup-container

  %h2 ピックアップカテゴリー 
  %h3
    =link_to "レディース新着アイテム",category_path(Category.first.id)
  .pickup-container__item-boxs
    -@ladies.each do |lady|
      .pickup-container__item-boxs__box
        = link_to "",item_path(lady.id) 
        .pickup-container__item-boxs__box__image
          =image_tag(lady.item_images[0].image.to_s,class: "images")
        .pickup-container__item-boxs__box__text
          .pickup-container__item-boxs__box__text__title #{lady.name}
          .pickup-container__item-boxs__box__text__num

            %span.like-num 15
            =fa_icon "heart",class:"icon-like"
            .pickup-container__item-boxs__box__text__num__price ¥#{lady.price}
          .pickup-container__item-boxs__box__text__title__tax (税込)
  .view-all.clearfix
    =link_to "すべての商品をみる","/"
